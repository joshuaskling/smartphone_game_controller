<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!--Buttons Category-->
    <PreferenceCategory
        android:title="@string/str_first_category_title"
        android:textSize="40px"
        >
        <ListPreference
            android:key="button_size_preference"
            android:title="@string/lp_list_preference_size"
            android:icon="@drawable/a_button_small_pressed"
            android:textSize="20px"
            android:entries="@array/array_list_preference_size"
            android:entryValues="@array/array_list_preference_size"
            />
        <ListPreference
            android:key="button_color_preference"
            android:title="@string/lp_list_preference_color"
            android:icon="@drawable/b_button_small_pressed"
            android:textSize="20px"
            android:entries="@array/array_list_preference_color"
            android:entryValues="@array/array_list_preference_color"
            />
    </PreferenceCategory>

    <!--Skins Category-->
    <PreferenceCategory
        android:title="@string/str_fourth_category_title"
        >
        <ListPreference
            android:key="background_preference"
            android:title="@string/lp_list_preference_background"
            android:icon="@drawable/bb"
            android:entries="@array/array_list_preference_entries_background"
            android:entryValues="@array/array_list_preference_entry_values_background"
            />
    </PreferenceCategory>

    <!--Volume Category-->
    <PreferenceCategory
        android:title="@string/str_second_category_title"
        >
        <ListPreference
            android:key="volume_preference"
            android:title="@string/lp_list_preference_title"
            android:icon="@drawable/sound"
            android:entries="@array/array_list_preference_entries"
            android:entryValues="@array/array_list_preference_entry_values"
            />
    </PreferenceCategory>

    <!--Bluetooth Settings-->
    <PreferenceScreen
        android:title="@string/more"
        >
        <PreferenceCategory
            android:title="@string/str_third_category_title"
            >
        </PreferenceCategory>
    </PreferenceScreen>
</PreferenceScreen>
