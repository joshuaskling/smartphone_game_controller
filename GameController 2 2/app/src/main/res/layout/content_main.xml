<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/back_1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <edu.csumb.gamecontroller.JoystickView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/leftJoystickView"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="65dp" />

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/leftDpadView"
        android:background="@drawable/dpad"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_marginLeft="65dp">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginRight="0dp"
        android:id="@+id/leftButtonLayout"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/leftJoystickView">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/l_button1"
            android:background="@drawable/blue_xs_button"
            android:layout_alignTop="@+id/l_button2"
            android:layout_toStartOf="@+id/l_button3" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/l_button2"
            android:background="@drawable/red_xs_button"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/l_button3" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/l_button3"
            android:background="@drawable/yellow_xs_button"
            android:layout_above="@+id/l_button1"
            android:layout_alignStart="@+id/l_button4" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/l_button4"
            android:background="@drawable/green_xs_button"
            android:layout_below="@+id/l_button2"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <edu.csumb.gamecontroller.JoystickView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/rightJoystickView"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/rightDpadView"
        android:background="@drawable/dpad"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone">
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginRight="0dp"
        android:id="@+id/rightButtonLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible">


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/r_button1"
            android:background="@drawable/blue_xs_button"
            android:layout_alignTop="@+id/r_button2"
            android:layout_toStartOf="@+id/r_button3" />


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/r_button2"
            android:background="@drawable/red_xs_button"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/r_button3" />


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/r_button3"
            android:background="@drawable/yellow_xs_button"
            android:layout_above="@+id/r_button1"
            android:layout_alignStart="@+id/r_button4" />


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/r_button4"
            android:background="@drawable/green_xs_button"
            android:layout_below="@+id/r_button2"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:backgroundTint="@color/red"
        android:id="@+id/linearLayout"
        android:layout_centerHorizontal="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Settings"
            android:onClick="loadSettings"
            android:id="@+id/settingsBtn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Start"
            android:onClick="swapJoystickAndButtons"
            android:id="@+id/startBtn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="Select"
            android:onClick="swapJoystickControl"
            android:id="@+id/selectBtn" />
    </LinearLayout>

</RelativeLayout>
